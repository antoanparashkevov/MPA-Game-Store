<main id="login">
    <div class="login-box">
        <h1>Login</h1>
        <form action="/auth/login" method="post">
            <label for="email">Email</label>
            <input type="text" name="email" placeholder="Email.." value="{{body.email}}">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Password.." value="{{body.password}}">
            <input type="submit" value="Login">
        </form>
        <p>Don't have an account? <a href="/auth/register">Register here</a></p>
    </div>
</main>